@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3 col-12 h-75">
                <div class="input-group input-group-lg">
                    <span class="input-group-text" id="basic-addon1">@@</span>
                    <input asp-for="Input.Email" type="text" class="form-control" aria-required="true" placeholder="Email" aria-label="Email" aria-describedby="basic-addon1">
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-10 d-flex">
                <div class="input-group input-group-lg">
                    <span class="input-group-text">First Name and City</span>
                    <input asp-for="Input.Name" type="text" placeholder="Name" aria-label="First name" class="form-control">
                    <input asp-for="Input.City" type="text" placeholder="City" aria-label="Last name" class="form-control">
                </div>
            </div>
            <div class="form-floating mb-3 col-12 d-flex">
                <div class="form-floating col-4">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating col-4 mx-4">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-floating mb-3 d-flex justify-content-start">
                <div class="col-6 ">
                <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                    <option disabled selected>Register as</option>
                </select>
                </div>
                </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
